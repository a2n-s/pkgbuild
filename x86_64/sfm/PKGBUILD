# Maintainer: Antoine Stevan
pkgname=a2n-s-sfm-git
pkgver=5.0.r589.8c0f76a
pkgrel=1
epoch=
pkgdesc="A patched build of sfm."
arch=(x86_64)
host="github.com"
user="a2n-s"
repo="sfm"
url="https://$host/$user/$repo.git"
license=('GNU')
groups=()
depends=(nerd-fonts-mononoki)
makedepends=(git)
checkdepends=()
optdepends=()
provides=(sfm)
conflicts=(sfm)
replaces=()
backup=()
options=()
install=${pkgname}.install
changelog=
source=("git+$url")
noextract=()
md5sums=('SKIP')
validpgpkeys=()

pkgver() {
  cd "${_pkgname}"
  printf "r%s.%s" "$(git -C "$repo" rev-list --count HEAD)" "$(git -C "$repo" rev-parse --short HEAD)"
}

build() {
  cd sfm
  make X11INC=/usr/include/X11 X11LIB=/usr/lib/X11
}

package() {
  cd sfm
  mkdir -p ${pkgdir}/opt/${pkgname}
  cp -rf * ${pkgdir}/opt/${pkgname}
  make PREFIX=/usr DESTDIR="${pkgdir}" install
  install -Dm644 LICENSE "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
  install -Dm644 README.md "${pkgdir}/usr/share/doc/${pkgname}/README.md"
}
