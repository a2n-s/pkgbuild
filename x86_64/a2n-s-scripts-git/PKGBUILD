# Maintainer: Antoine Stevan
pkgname=a2n-s-scripts-git
pkgver=5.0.r3.9f46703
pkgrel=1
epoch=
pkgdesc="My personal collection of scripts."
arch=(x86_64)
host="github.com"
user="a2n-s"
repo="scripts"
url="https://$host/$user/$repo.git"
license=('GNU')
groups=()
depends=()
makedepends=(git)
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=
source=("git+$url")
noextract=()
md5sums=('SKIP')
validpgpkeys=()

pkgver() {
    cd "${_pkgname}"
    printf "r%s.%s" "$(git -C "$repo" rev-list --count HEAD)" "$(git -C "$repo" rev-parse --short HEAD)"
}

package() {
    cd "$repo"
    mkdir -p ${pkgdir}/usr/local/bin/
    mkdir -p ${pkgdir}/usr/local/share/a2n-s-scripts/examples/
    cp -rf scripts/* ${pkgdir}/usr/local/bin/
    cp -rf examples/* ${pkgdir}/usr/local/share/a2n-s-scripts/examples/
}
